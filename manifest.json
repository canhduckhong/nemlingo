{
    "manifest_version": 3,
    "name": "Nemlingo",
    "version": "1.0",
    "description": "Select a Danish word and learn its meaning and pronunciation.",
    "permissions": ["contextMenus", "scripting", "activeTab", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["saved.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  